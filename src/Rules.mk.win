.PHONY: src_all src_clean src_distclean
SUBDIRS := $(DIR) $(DIR)/entity $(DIR)/utils $(DIR)/network $(DIR)/ui $(DIR)/menu
src_EXEC := $(DIR)\a.out
src_SRCS := $(foreach D,$(SUBDIRS),$(wildcard $D/*.cpp))
src_OBJS := $(src_SRCS:.cpp=.o)

src_all: $(src_EXEC)

$(src_EXEC): $(src_OBJS)
	$(CC) $(CFLAGS) $(src_OBJS) -o $(src_EXEC) $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $^ -o $@

src_clean:
	del /s *.o

src_distclean:
	del -rf $(src_EXEC)
